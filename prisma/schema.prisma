generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
}

enum crdb_internal_region {
  aws_ap_south_1 @map("aws-ap-south-1")
}




enum UserRole {
STUDENT
ADMIN
FACULTY
}


enum TeacherStatus {
UPLOADED
ACCEPTED
PUBLISHED
UPDATE
}


enum JournalScope {
INTERNATIONAL
NATIONAL
REGIONAL
LOCAL
}


enum JournalReviewType {
PEER_REVIEWED
DOUBLE_BLIND
SINGLE_BLIND
EDITORIAL_REVIEWED
NON_PEER_REVIEWED
}


enum JournalAccessType {
OPEN_ACCESS
SUBSCRIPTION
HYBRID
DIAMOND_OPEN_ACCESS
}


enum JournalIndexing {
SCOPUS
WEB_OF_SCIENCE
SCI
SCIE
SSCI
AHCI
UGC_CARE
DOAJ
PUBMED
IEEE_XPLORE
NONE
}


enum JournalQuartile {
Q1
Q2
Q3
Q4
NOT_APPLICABLE
}


enum JournalPublicationMode {
ONLINE
PRINT
PRINT_AND_ONLINE
}


enum BookchapterStatus {
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  PUBLISHED
}


enum CopyrightStatus {
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  PUBLISHED
}


enum JournalStatus {
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  PUBLISHED
}



model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model SpecialUser {
  id    String @id @default(cuid())
  email String @unique
  role  UserRole @default(FACULTY)

  @@map("special_users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}


model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?
  role          UserRole @default(STUDENT)
  accounts      Account[]
  sessions      Session[]
  studentBookChapters BookChapterStudentAuthor[] @relation("studentAuthors")
  facultyBookChapters BookChapterTeacherAuthor[] @relation("facultyAuthors")
  studentCopyrights   CopyrightStudentAuthor[]   @relation("studentCopyrightAuthors")
  facultyCopyrights   CopyrightTeacherAuthor[]   @relation("facultyCopyrightAuthors")
  studentJournals     JournalStudentAuthor[]     @relation("studentJournalAuthors")
  facultyJournals     JournalTeacherAuthor[]     @relation("facultyJournalAuthors")

  @@map("users")
}


model BookChapter {
  id               String                       @id @default(cuid())
  title            String
  abstract         String?
  imageUrl         String?
  documentUrl      String?
  bookChapterStatus BookchapterStatus               @default(SUBMITTED)
  teacherStatus     TeacherStatus               @default(UPLOADED)
  isbnIssn         String?
  registrationFees Float?
  reimbursement    Float?
  isPublic         Boolean                      @default(false)
  keywords         String[]                    // new
  doi              String?                      // new
  publicationDate  DateTime?                    // new
  publisher        String?                      // new
  createdAt        DateTime                     @default(now()) @map("created_at")
  updatedAt        DateTime                     @updatedAt @map("updated_at")
  studentAuthors   BookChapterStudentAuthor[]   @relation("studentAuthors")
  facultyAuthors   BookChapterTeacherAuthor[]   @relation("facultyAuthors")
}


model BookChapterStudentAuthor {
  id          String      @id @default(cuid())
  bookChapter BookChapter @relation("studentAuthors", fields: [bookChapterId], references: [id], onDelete: Cascade)
  bookChapterId String    @map("book_chapter_id")
  user        User        @relation("studentAuthors", fields: [userId], references: [id], onDelete: Cascade)
  userId      String      @map("user_id")
}

model BookChapterTeacherAuthor {
  id          String      @id @default(cuid())
  bookChapter BookChapter @relation("facultyAuthors", fields: [bookChapterId], references: [id], onDelete: Cascade)
  bookChapterId String    @map("book_chapter_id")
  user        User        @relation("facultyAuthors", fields: [userId], references: [id], onDelete: Cascade)
  userId      String      @map("user_id")
}

model Copyright {
  id               String           @id @default(cuid())
  regNo            String
  title            String
  abstract         String?
  imageUrl         String?
  documentUrl      String?
  dateOfFiling     DateTime?
  dateOfSubmission DateTime?
  dateOfPublished  DateTime?
  dateOfGrant      DateTime?
  registrationFees Float?
  reimbursement    Float?
  copyrightStatus  CopyrightStatus  @default(SUBMITTED)
  teacherStatus     TeacherStatus               @default(UPLOADED)
  isPublic         Boolean          @default(false)
  createdAt        DateTime         @default(now()) @map("created_at")
  updatedAt        DateTime         @updatedAt @map("updated_at")
  studentAuthors   CopyrightStudentAuthor[] @relation("studentCopyrightAuthors")
  facultyAuthors   CopyrightTeacherAuthor[] @relation("facultyCopyrightAuthors")
}
model CopyrightStudentAuthor {
  id          String      @id @default(cuid())
  copyright   Copyright   @relation("studentCopyrightAuthors", fields: [copyrightId], references: [id], onDelete: Cascade)
  copyrightId String      @map("copyright_id")
  user        User        @relation("studentCopyrightAuthors", fields: [userId], references: [id], onDelete: Cascade)
  userId      String      @map("user_id")
}

model CopyrightTeacherAuthor {
  id          String      @id @default(cuid())
  copyright   Copyright   @relation("facultyCopyrightAuthors", fields: [copyrightId], references: [id], onDelete: Cascade)
  copyrightId String      @map("copyright_id")
  user        User        @relation("facultyCopyrightAuthors", fields: [userId], references: [id], onDelete: Cascade)
  userId      String      @map("user_id")
}


model Journal {
id String @id @default(cuid())
serialNo String @unique
title String
journalName String
imageUrl String?
documentUrl String?
abstract String?


scope JournalScope
reviewType JournalReviewType
accessType JournalAccessType
indexing JournalIndexing
quartile JournalQuartile @default(NOT_APPLICABLE)


impactFactor Float?
impactFactorDate DateTime?


publisher String?
publicationMode JournalPublicationMode
publicationDate DateTime?


doi String?
paperLink String?
keywords String[]


registrationFees Float?
reimbursement Float?

journalStatus JournalStatus @default(SUBMITTED)
teacherStatus TeacherStatus @default(UPLOADED)
isPublic Boolean @default(false)


createdAt DateTime @default(now())
updatedAt DateTime @updatedAt


studentAuthors JournalStudentAuthor[] @relation("studentJournalAuthors")
facultyAuthors JournalTeacherAuthor[] @relation("facultyJournalAuthors")


@@map("journals")
}

model JournalStudentAuthor {
  id        String  @id @default(cuid())
  journal   Journal @relation("studentJournalAuthors", fields: [journalId], references: [id], onDelete: Cascade)
  journalId String  @map("journal_id")
  user      User    @relation("studentJournalAuthors", fields: [userId], references: [id], onDelete: Cascade)
  userId    String  @map("user_id")

  @@map("journal_student_authors")
}

model JournalTeacherAuthor {
  id        String  @id @default(cuid())
  journal   Journal @relation("facultyJournalAuthors", fields: [journalId], references: [id], onDelete: Cascade)
  journalId String  @map("journal_id")
  user      User    @relation("facultyJournalAuthors", fields: [userId], references: [id], onDelete: Cascade)
  userId    String  @map("user_id")

  @@map("journal_teacher_authors")
}